<h2>Edit Movie</h2>

<form action='/movies/{{id}}' method='POST'>
  <label>Title</label>
  <input type='text' name='title' value='{{title}}' />

  <label>Genre:</label>
  <input type='text' name='genre' />

  <label>Plot:</label>
  <input type='text' name='plot' />

  <label>Celebrity</label>
  {{! <input type='text' name='author' /> }}
  <select name='cast'>
    <option value=''>Choose a celebrity</option>
    {{#each celebrities}}
      <option value={{id}}>{{name}}</option>
    {{/each}}
  </select>

</form>